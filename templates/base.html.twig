        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <script src="js/select.js"></script>
    </head>
    <body>
        <div id="main-container">
            <nav>
                <a href="index.html" id="logo">
                <img src={{asset('img/logo.png')}} alt="Logo TaskLinker" />
                </a>
                <ul id="main-menu">
                    <li class="{{ app.request.get('_route') == 'app_home' ? 'active' : '' }}">
                        <a href="{{ path('app_home') }}">
                        <i class="fa-solid fa-list-check"></i> Projets
                        </a>
                    </li>
                    <li class="{{ app.request.get('_route') == 'app_employee' ? 'active' : '' }}">
                        <a href="{{ path('app_employee') }}">
                        <i class="fa-regular fa-user"></i> Ã‰quipe
                        </a>
                    </li>
                </ul>
            </nav>
            {% block body %}{% endblock %}
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>
